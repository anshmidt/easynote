<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/noteBackground"
    >

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/note_textview"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/notesTextColor"
        android:textSize="20sp"
        android:background="@color/noteBackground"
        android:textCursorDrawable="@null"
        android:layout_below="@+id/note_listname_textview"
        android:layout_alignParentStart="true">
    </TextView>

    <TextView
        android:id="@+id/note_listname_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="0dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:textColor="@color/listNameInNoteTextColor"
        android:textSize="14sp"

        android:background="@color/noteBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </TextView>
    <!--android:inputType="textMultiLine|textNoSuggestions"-->
    <!--android:focusableInTouchMode="false"-->

</RelativeLayout>