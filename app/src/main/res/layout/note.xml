<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/note_horizontal_margin"
    android:layout_marginRight="@dimen/note_horizontal_margin"
    android:layout_marginTop="@dimen/note_vertical_margin"
    android:layout_marginBottom="@dimen/note_vertical_margin"
    style="@style/NoteCardViewStyle">



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/noteBackground"
        >


        <TextView
            android:id="@+id/note_listname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="0dp"
            android:paddingLeft="@dimen/text_in_note_horizontal_padding"
            android:paddingRight="10dp"
            android:textColor="@color/listNameInNoteTextColor"
            android:textSize="@dimen/list_name_in_note_text_size"

            android:background="@color/noteBackground"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
        </TextView>
        <!--android:inputType="textMultiLine|textNoSuggestions"-->
        <!--android:focusableInTouchMode="false"-->


        <ImageButton
            android:id="@+id/note_more_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?android:selectableItemBackground"
            android:layout_below="@id/note_listname_textview"
            android:layout_alignParentEnd="true"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_more_horizontal">
        </ImageButton>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/note_textview"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/text_in_note_vertical_padding"
            android:paddingBottom="@dimen/text_in_note_vertical_padding"
            android:paddingLeft="@dimen/text_in_note_horizontal_padding"
            android:paddingRight="@dimen/text_in_note_horizontal_padding"
            android:textColor="@color/notesTextColor"
            android:textSize="@dimen/main_text_size"
            android:background="@color/noteBackground"
            android:textCursorDrawable="@null"
            android:layout_below="@+id/note_more_button"
            android:layout_alignParentStart="true">
        </TextView>


        <EditText xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/note_edittext"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/text_in_note_vertical_padding"
            android:paddingBottom="@dimen/text_in_note_vertical_padding"
            android:paddingLeft="@dimen/text_in_note_horizontal_padding"
            android:paddingRight="@dimen/text_in_note_horizontal_padding"
            android:textColor="@color/notesTextColor"
            android:textSize="@dimen/main_text_size"
            android:background="@color/noteBackground"
            android:textCursorDrawable="@drawable/cursor_editablenote"
            android:textIsSelectable="true"
            android:inputType="text|textMultiLine|textNoSuggestions|textAutoCorrect"
            android:layout_below="@+id/note_more_button"
            android:layout_alignParentStart="true"
            >
        </EditText>




    </RelativeLayout>





</android.support.v7.widget.CardView>




