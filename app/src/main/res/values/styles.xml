<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="autoCompleteTextViewStyle">@style/cursorInSearchViewColor</item>
        <item name="android:textColorHint">@color/hintInNote</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/menuIcons</item>
    </style>

    <style name="NoteCardViewStyle" parent="Theme.AppCompat.Light">

        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">1dp</item>
        <item name="contentPaddingBottom">5dp</item>
        <item name="contentPaddingTop">5dp</item>
        <item name="contentPaddingLeft">5dp</item>
        <item name="contentPaddingRight">5dp</item>
        <item name="cardBackgroundColor">@color/noteBackground</item>
    </style>


    <!--For cursor_searchview in SearchView-->
    <style name="cursorInSearchViewColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor_searchview</item>
    </style>


    <style name="importantNote">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/notesTextColor</item>
    </style>

    <style name="normalNote">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/notesTextColor</item>
    </style>

    <style name="minorNote">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/minorNotesTextColor</item>
    </style>

</resources>
